rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /rankings/{document} {
      // 누구나 랭킹 조회 가능
      allow read: if true;
      // 필수 필드 검증 + 닉네임 12자 제한
      allow create: if request.resource.data.keys().hasAll(['name','wave','kills','energy','date'])
                    && request.resource.data.name is string
                    && request.resource.data.name.size() > 0
                    && request.resource.data.name.size() <= 12
                    && request.resource.data.wave is int
                    && request.resource.data.kills is int
                    && request.resource.data.energy is int;
      // 수정/삭제 불가 (부정 방지)
      allow update, delete: if false;
    }
  }
}
